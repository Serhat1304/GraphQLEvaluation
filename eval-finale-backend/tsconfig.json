{
    "compilerOptions": {
      "target": "es2020", 
      "module": "commonjs", 
      "strict": true, 
      "esModuleInterop": true,
      "skipLibCheck": true, 
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist", 
      "rootDir": "./src",
      "resolveJsonModule": true, 
      "noEmit": false, 
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "strictPropertyInitialization": false 
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  